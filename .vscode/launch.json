{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WDIO Debug",
      "type": "node",
      "request": "launch",
      "args": ["wdio.conf.js", "--spec", "${file}"],
      "env": {
        "DEBUG": "true"
      },
      "autoAttachChildProcesses": true,
      "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/lib/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}